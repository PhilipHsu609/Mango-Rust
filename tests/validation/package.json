{
  "name": "mango-test-validation",
  "version": "1.0.0",
  "description": "Test validation framework for Mango-Rust - validates test effectiveness through bug injection",
  "type": "module",
  "main": "cli.js",
  "scripts": {
    "validate": "node cli.js",
    "validate:single": "node cli.js --test",
    "validate:report": "node cli.js --report-only",
    "validate:dry-run": "node cli.js --dry-run",
    "validate:verbose": "node cli.js --verbose",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf .validation-results/*/",
    "help": "node cli.js --help"
  },
  "keywords": [
    "testing",
    "validation",
    "mutation-testing",
    "test-quality"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "simple-git": "^3.25.0",
    "yaml": "^2.4.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "minimist": "^1.2.8"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
